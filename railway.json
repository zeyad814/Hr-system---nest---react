{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd back-end/server && npm install && npm run build && npx prisma migrate deploy"
  },
  "deploy": {
    "startCommand": "cd back-end/server && npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

